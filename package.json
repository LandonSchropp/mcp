{
  "name": "@landonschropp/mcp",
  "description": "My personal collection of MCP servers",
  "author": "Landon Schropp <schroppl@gmail.com>",
  "repository": "https://github.com/LandonSchropp/mcp",
  "version": "0.1.0",
  "license": "MIT",
  "publishConfig": {
    "access": "public"
  },
  "files": [
    "dist",
    "templates",
    "prompts",
    "docs"
  ],
  "type": "module",
  "bin": {
    "mcp": "dist/index.js"
  },
  "scripts": {
    "preinstall": "pnpm dlx only-allow pnpm",
    "build": "tsc -p tsconfig.build.json",
    "prepublishOnly": "pnpm build",
    "check-types": "tsc --noEmit",
    "test": "vitest --run --hideSkippedTests",
    "inspector": "mcp-inspector tsx src/index.ts",
    "start": "tsx src/index.ts"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.18.2",
    "date-fns": "^4.1.0",
    "handlebars": "^4.7.8",
    "nano-spawn": "^1.0.3",
    "yaml": "^2.8.1",
    "zod": "3.25.76"
  },
  "devDependencies": {
    "@modelcontextprotocol/inspector": "^0.16.8",
    "@trivago/prettier-plugin-sort-imports": "^5.2.2",
    "@types/node": "^24.5.2",
    "prettier": "^3.6.2",
    "prettier-plugin-jsdoc": "^1.3.3",
    "ts-dedent": "^2.2.0",
    "tsx": "^4.20.6",
    "typescript": "^5.9.2",
    "vitest": "^3.2.4"
  }
}
